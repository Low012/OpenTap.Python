<?xml version="1.0" encoding="UTF-8"?>
<Package Name="Python" xmlns="http://keysight.com/Schemas/tap" Version="$(GitVersion)" OS="Windows,Linux">
    <Description>
        OpenTAP Python SDK plugin. This plugin includes all tools, examples, and documentation to develop OpenTAP plugins using Python.
        <Owner>Keysight Technologies, Inc.</Owner>
        <Links>
            <Link Name="Source Code" Description="Go to the source code repository." URL="https://gitlab.com/OpenTAP/Plugins/python"/>
            <Link Name="Documentation" Description="Go to the documentation." URL="https://opentap.gitlab.io/Plugins/python/"/>
        </Links>
        <Contacts> tap.support@keysight.com </Contacts>
        <Prerequisites> OpenTAP (9.6+) and Python (2.7, 3.6, 3.7) </Prerequisites>
        <SourceUrl>https://opentap.gitlab.io/Plugins/python/</SourceUrl>
    </Description>
    <Repository Url="https://opentap.gitlab.io/Plugins/python/" />
    <Files>
        <File Path="Packages/Python/Keysight.OpenTap.Plugins.Python.dll" >
            <IgnoreDependency>Python.Runtime</IgnoreDependency>
            <IgnoreDependency>Microsoft.CSharp</IgnoreDependency>
            <IgnoreDependency>System.Collections.Concurrent</IgnoreDependency>
            <IgnoreDependency>System.IO.FileSystem.Primitives</IgnoreDependency>
            <IgnoreDependency>System.Linq</IgnoreDependency>
            <IgnoreDependency>System.Linq.Expressions</IgnoreDependency>
            <IgnoreDependency>System.ObjectModel</IgnoreDependency>
            <IgnoreDependency>System.Reflection.Emit</IgnoreDependency>
            <IgnoreDependency>System.Reflection.Emit.ILGeneration</IgnoreDependency>
            <IgnoreDependency>System.Reflection.Emit.LightWeight</IgnoreDependency>
            <IgnoreDependency>System.Security.Cryptography.Primitives</IgnoreDependency>
            <IgnoreDependency>System.Text.RegularExpressions</IgnoreDependency>
            <IgnoreDependency>System.Threading</IgnoreDependency>
            <IgnoreDependency>System.Threading.Task.Extensions</IgnoreDependency>
            <IgnoreDependency>System.Threading.Task.Parallel</IgnoreDependency>
            <IgnoreDependency>System.Xml.ReaderWriter</IgnoreDependency>
            <IgnoreDependency>System.Xml.XDocument</IgnoreDependency>
        </File>
        <File Path="Packages/Python/PluginExample/*.py" />
        <File Path="Packages/Python/Linux Sample Files/Test Plans/*.TapPlan" />
        <File Path="Packages/Python/Linux Sample Files/Settings/Bench/Default/*.xml" />
        <File Path="Packages/Python/PythonTap.py" />
        <File Path="Packages/Python/icon.png">
            <PackageIcon/>
        </File>

    </Files>
</Package>


